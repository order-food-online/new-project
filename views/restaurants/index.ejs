<% include ../partials/header %>
	
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome To Order Food Online</h1>
			<p>View Active Restaurant Listings</p>
			<p><a class="btn btn-primary btn-large" href="/restaurants/new">Add New Restaurant Listing</a></p>
			<form action="/restaurants" method="GET">
                <div class="input-group">
                  <input type="text" name="search" style="width: 100%" class="form-control" placeholder="Search By City, For Restaurants!">
                  <span class="input-group-btn">
                    <button class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
                  </span>
                </div>
              </form>
		</div>
	</header>

	<div class="row">
		<div class="col-lg-12">
			<h3>
				Our Restaurant Listings
			</h3>
		</div>
	</div>
	<!--new code changes-->
	
	<!--/end new code changes.-->
	
	
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% restaurants.forEach(function(restaurants){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= restaurants.image.url %>" class="img-responsive" style="height:250px; width: 300px;">
                <div class="caption">
                    <h4><%= restaurants.restaurant_name %></h4>
                    <% if (restaurants.rating === 0) { %>
                    <em>No reviews yet.</em>
                    <% } else { %>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star <% if (restaurants.rating > 1.5) { %> checked <% } %>"></span>
                    <span class="fa fa-star <% if (restaurants.rating > 2.5) { %> checked <% } %>"></span>
                    <span class="fa fa-star <% if (restaurants.rating > 3.5) { %> checked <% } %>"></span>
                    <span class="fa fa-star <% if (restaurants.rating > 4.5) { %> checked <% } %>"></span>
                    <br>
                    <span>total reviews: <%= restaurants.reviews.length %></span>
                    <% } %>
                </div>
				<div class="caption">
				<span class="badge label-primary"><i class="fa fa-thumbs-up"></i> <%= restaurants.likes.length %></span>
				</div>
                <p>
                    <a href="/restaurants/<%= restaurants._id %>" class="btn btn-primary btn-md active"><i class="fa fa-plus"></i> View Listing</a>
                </p>
            </div>
        </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>